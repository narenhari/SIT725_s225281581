<link rel="stylesheet" href="/css/footer.css">

<footer class="site-footer">
    <div class="footer-shell">
        <div class="footer-row">
            <div class="footer-brand">
                <a href="/" class="footer-logo">
                    <img src="/img/logo.svg" alt="Alive logo" class="footer-logo-mark"/>
                    <div class="footer-logo-text">
                        <img src="/img/logo/logo-text-white.svg" alt="ALIVE" class="footer-wordmark-img"/>
                        <span class="footer-tagline">Sleep Health Tracker</span>
                    </div>
                </a>
                <p class="footer-copy">Rest easy with insights, routines, and support tailored to your better sleep.</p>
            </div>

            <div class="footer-links">
                <div class="footer-col">
                    <h4>Navigation</h4>
                    <ul class="footer-menu">
                        <li><a href="/">Home</a></li>
                        <li><a href="/about">About Us</a></li>
                        <li><a href="/insights">Insights</a></li>
                    </ul>
                </div>

                <div class="footer-col">
                    <h4>Account</h4>
                    <ul class="footer-menu">
                        <% if (typeof isAuthenticated !== 'undefined' && isAuthenticated) { %>
                            <li><a href="/dashboard">Dashboard</a></li>
                            <li><a href="/profile">Profile</a></li>
                            <li><a href="/profile/schedules">Sleep Schedules</a>
                            </li>
                            <li><a href="/auth/logout">Sign Out</a></li>
                        <% } else { %>
                            <li><a href="/auth/login">Sign In</a></li>
                            <li><a href="/auth/register">Create Account</a></li>
                        <% } %>
                    </ul>
                </div>

                <div class="footer-col">
                    <h4>Support</h4>
                    <ul class="footer-menu">
                        <li><a href="/profile/support">Support Chat</a></li>
                        <li><a href="mailto:support@alive.app">Contact Us</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="footer-bottom">
            <span>© <%= new Date().getFullYear() %> Alive. All rights reserved.</span>
            <div class="footer-bottom-links">
                <a href="/privacy">Privacy Policy</a>
                <span class="footer-dot">•</span>
                <a href="/terms">Terms &amp; Conditions</a>
            </div>
        </div>
    </div>
</footer>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
<script src="/js/scripts.js"></script>
<% if (typeof isAuthenticated !== 'undefined' && isAuthenticated) { %>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/socket-notifications.js"></script>
<% } %>
<% if (typeof isDashboard !== 'undefined' && isDashboard) { %>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-annotation@3.0.1"></script>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script src="/js/app.js"></script>
    <script src="/js/dashboard.js"></script>
    <script src="/js/goal.js"></script>
<% } %>
<% if (typeof isMessages !== 'undefined' && isMessages) { %>
    <script src="/js/messages-page.js"></script>
<% } %>
</body>
</html>